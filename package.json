{
  "name": "raydoom-core",
  "version": "1.0.1",
  "description": "DOOM Shareware compiled to WebAssembly for Node.js (RayDoom core engine)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "GPL-2.0",
  "keywords": [
    "doom",
    "wasm",
    "ascii",
    "game",
    "retro",
    "raycast",
    "raydoom"
  ],
  "files": [
    "dist/**/*.js",
    "dist/**/*.wasm",
    "dist/**/*.d.ts",
    "NOTICE.md"
  ],
  "scripts": {
    "build": "sh scripts/build-wasm.sh && tsc",
    "prepublishOnly": "npm run build",
    "clean": "rm -rf dist && mkdir dist",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/node": "^22.0.0",
    "eslint": "^9.22.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.24.0"
  },
  "author": "Saketh Chandra",
  "repository": {
    "type": "git",
    "url": "https://github.com/Saketh-Chandra/raydoom-core.git"
  },
  "bugs": {
    "url": "https://github.com/Saketh-Chandra/raydoom-core/issues"
  },
  "homepage": "https://github.com/Saketh-Chandra/raydoom-core#readme"
}
